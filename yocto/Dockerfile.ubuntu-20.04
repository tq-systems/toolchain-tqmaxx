ARG registry_base_url
FROM ${registry_base_url}/yocto-base:ubuntu-20.04

ARG ci_user_name
ARG ci_user_uid
ARG ci_user_gid

ENV USER=${ci_user_name} USER_ID=${ci_user_uid} USER_GID=${ci_user_gid}

# add user
# to enable bind mounts on jenkins slaves
# appropriate users must be added to every jenkins slave

RUN \
	groupadd --gid "${USER_GID}" "${USER}" && \
	useradd \
		--uid ${USER_ID} \
		--gid ${USER_GID} \
		--create-home \
		--shell /bin/bash \
		${USER}

RUN \
	apt-get update && apt-get -y upgrade && \
	apt-get install -y \
		openjdk-11-jre \
		lavacli && \
	apt-get autoremove --yes && apt-get clean --yes && \
	rm -rf /var/lib/apt/lists/*

RUN git clone --depth=1 --branch 3.1 https://github.com/siemens/kas.git && \
		python3 -m pip install ./kas && \
		rm -rf ./kas

USER "${USER}"
